<div class="index-waku">
<p><%= notice %></p>

    <h1>Books</h1>
    <table border="1" class="ichiran">
        <tr>
            <th><b>タイトル</b></th>
            <th><b>感想</b></th>
            <th colspan="3"></th>
        </tr>
        <% @hons.each do |hon| %>
        <tr>
            <td><%= hon.title %></td>
            <td><%= hon.kansou %></td>
            <td><%= link_to "show", hon_path(hon.id) %></td>
            <td><%= link_to "edit", edit_hon_path(hon.id) %></td>
            <td><%= link_to "destroy", hon_path(hon.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
    </table>
    <h2>New Book</h2>
    <%= form_for(@hon) do |f| %>

    <p>タイトル</p>
    <%= f.text_field :title %>

    <p>感想</p>
    <%= f.text_area :kansou %>
    <!-- 投稿ボタン -->
    <%= f.submit '投稿' %>
    <% end %>
      
</div>