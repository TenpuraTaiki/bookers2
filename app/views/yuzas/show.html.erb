<div class="container-fluid">
    <div class="row">
        <div class="col-lg-9">
            <div class="index-waku">
                <p><%= notice %></p>

                <h1>Books</h1>
                <table border="1" class="ichiran">
                    <tr>
                        <th><b>タイトル</b></th>
                        <th><b>感想</b></th>
                        <th colspan="3"></th>
                    </tr>
                    <% @hons.each do |hon| %>
                    <tr>
                        <td><%= hon.title %></td>
                        <td><%= hon.kansou %></td>
                        <td><%= link_to "show", hon_path(hon.id) %></td>

                    <% if hon.yuza == current_yuza %>
                        <td><%= link_to "edit", edit_hon_path(hon.id) %></td>
                        <td><%= link_to "destroy", hon_path(hon.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                    <% end %>

                    </tr>
                    <% end %>
                </table>
                <h2>New Book</h2>
                <%= form_for(@hon) do |f| %>

                <p>タイトル</p>
                <%= f.text_field :title %>

                <p>感想</p>
                <%= f.text_area :kansou %>
                <!-- 投稿ボタン -->
                <%= f.submit '投稿' %>
                <% end %>

            </div>
        </div>

        <div class="col-lg-3">
            <div class="myinfo">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span><h3><%= @yuza.name %></h3>
                <%= attachment_image_tag @yuza, :yuza_gazou, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
                <%= @yuza.yuza_jikosyo %><br>
                <%= link_to "マイページ編集", edit_yuza_path(current_yuza.id) %>
            </div>
        </div>
    </div>
</div>